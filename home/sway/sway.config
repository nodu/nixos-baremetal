#----------------------------------------------------------------------
# Mouse Mover Mode
#----------------------------------------------------------------------
set $mouseMover Move far (hjkl), Move close (hjkl+shift), cl[i]ck, click&exit(spacebar/enter), right click (shift+spacebar / I), scroll (u/d)

bindsym $mod+m mode "$mouseMover"
mode "$mouseMover" {
  bindsym c mode "default"
  bindsym Escape mode "default"

  bindsym space exec ydotool click 0xC0
  bindsym Return exec ydotool click 0xC0 ; mode "default"
  bindsym i exec ydotool click 0xC0

  bindsym shift+space exec ydotool click 0xC1
  bindsym shift+i exec ydotool click 0xC1

  bindsym u exec ydotool click 0xC2
  bindsym d exec ydotool click 0xC3

  bindsym h exec ydotool mousemove -- -200 0
  bindsym j exec ydotool mousemove -- 0 200
  bindsym k exec ydotool mousemove -- 0 -200
  bindsym l exec ydotool mousemove -- 200 0

  bindsym shift+h exec ydotool mousemove -- -25 0
  bindsym shift+j exec ydotool mousemove -- 0 25
  bindsym shift+k exec ydotool mousemove -- 0 -25
  bindsym shift+l exec ydotool mousemove -- 25 0
}

# Theming
smart_borders on
gaps inner 7
gaps outer 5
smart_gaps on

# Disable shortcuts inhibitor globally so apps like Chrome --app= don't steal Sway shortcuts
seat * shortcuts_inhibitor disable

input {
  type:touchpad {
    tap enabled
    natural_scroll disabled
    middle_emulation enabled
    dwt disabled
  }

  type:keyboard {
    xkb_options ctrl:nocaps
  }

  type:touch {
    events disabled
  }
}

#----------------------------------------------------------------------
# Status Bar
#----------------------------------------------------------------------
bar {
  position top
  status_command i3status -c ~/.config/i3status/config
  font pango:Fira Code 12

  colors {
    statusline #ffffff
    background $bar-color
    separator #191919
    focused_workspace $focused-ws $focused-ws $in-text
    inactive_workspace $in-focused-ws $in-focused-ws $text
    urgent_workspace $u-bgcolor $u-bgcolor $text
  }
}
