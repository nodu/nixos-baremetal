#!/usr/bin/env bash
#
# Rofi-based audio output (sink) selection menu.
# Can be called standalone or sourced by other scripts.
#

function select_output {
  local NEW_OUTPUT device_list default_id active_index i

  # Get the current default sink's PipeWire node ID
  default_id=$(wpctl inspect @DEFAULT_AUDIO_SINK@ 2>/dev/null | grep -oP '^\s*id\s+\K\d+' | head -1)

  # Build device list (id\tdescription)
  device_list=$(pw-dump | jq -r '.[] | select(.info.props."media.class"=="Audio/Sink") | "\(.id)\t\(.info.props."node.description")"')

  # Find the 0-based index of the current default
  active_index=""
  i=0
  while IFS=$'\t' read -r dev_id dev_desc; do
    if [[ "$dev_id" == "$default_id" ]]; then
      active_index="$i"
      break
    fi
    ((i++))
  done <<< "$device_list"

  # Build rofi options
  local rofi_opts=(-dmenu -display-columns 2 -p "Select Audio Output" -location 2 -theme ~/.config/rofi/audio-select.rasi)
  if [[ -n "$active_index" ]]; then
    rofi_opts+=(-a "$active_index")
  fi

  NEW_OUTPUT=$(echo "$device_list" | rofi "${rofi_opts[@]}" | sed -e 's/[^0-9]*\([0-9]*\).*/\1/g')
  if ! [[ -z "$NEW_OUTPUT" ]]; then
    wpctl set-default "$NEW_OUTPUT"
  fi
}

# Run directly if not being sourced
if [[ "${BASH_SOURCE[0]}" == "${0}" ]]; then
  select_output
fi
